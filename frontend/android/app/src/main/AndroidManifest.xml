<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk tools:overrideLibrary="com.android.car.ui" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tickets4U"
        android:usesCleartextTraffic="true"> <activity
        android:name=".RegisterActivity"
        android:exported="false" />

        <activity
            android:name=".LoadingActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.cart.CartActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".eventos.ui.payment.PaymentActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".eventos.ui.payment.PaymentSuccessActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".eventos.ui.payment.PaymentLoadingActivity"
            android:exported="false" />

        <activity
            android:name=".DatosDeEventoActivity"
            android:exported="false" />

        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".PaginaCompraActivity"
            android:exported="false" />
        <activity
            android:name=".TicketDetailActivity"
            android:exported="false" />
        <activity
            android:name=".TicketWallet"
            android:exported="false" />

    </application>

</manifest>