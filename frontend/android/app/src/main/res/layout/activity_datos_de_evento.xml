<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".DatosDeEventoActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Concierto de Maluma"
                android:textColor="#0F172A"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvPopularity"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Muy popular"
                android:textColor="#22C55E"
                android:textSize="15sp"
                android:layout_marginLeft="1dp"
                app:layout_constraintStart_toEndOf="@+id/tvEventTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvEventTitle"
                app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivEventImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/maluma"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.MediumComponent"
                app:layout_constraintTop_toBottomOf="@+id/tvEventTitle" />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="22 de junio · 21:00"
                android:textColor="#1E40AF"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/ivEventImage" />

            <!-- Nombre del estadio -->
            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Estadio Metropolitano"
                android:textColor="#949494"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tvEventDate" />

            <!-- Barra fina/divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="#2563EB"
                app:layout_constraintTop_toBottomOf="@+id/tvEventLocation" />

            <!-- Texto largo -->
            <TextView
                android:id="@+id/tvEventDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="8dp"
                android:text="Prepárate para una noche que quedará en la memoria de todos. Maluma llega al Estadio Metropolitano para hacer vibrar a sus fans con sus mayores éxitos y toda su energía en vivo. No te pierdas este espectáculo único el 22 de junio a las 21:00. ¡Una experiencia que solo se vive una vez!"
                android:textColor="#334155"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/divider" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabBuyTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Comprar entradas"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:backgroundTint="#2563EB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
